<mvc:View controllerName="freestyle.controller.List"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
  xmlns:smartTable="sap.ui.comp.smarttable">
  <Page title="{i18n>title}" id="List">
    <content>
      <smartFilterBar:SmartFilterBar
        id="smartFilterBar"
        entitySet="MessageHeaderSet">
        <smartFilterBar:controlConfiguration>
          <smartFilterBar:ControlConfiguration
            id="idControlConfiguration"
            key="Category"
            visibleInAdvancedArea="true"
            preventInitialDataFetchInValueHelpDialog="false"></smartFilterBar:ControlConfiguration>
        </smartFilterBar:controlConfiguration>
      </smartFilterBar:SmartFilterBar>
      <smartTable:SmartTable
        id="smartTable_ResponsiveTable"
        smartFilterId="smartFilterBar"
        tableType="ResponsiveTable"
        editable="false"
        entitySet="MessageHeaderSet"
        useVariantManagement="false"
        useTablePersonalisation="false"
        header="Messages"
        showRowCount="true"
        useExportToExcel="false"
        enableAutoBinding="true"></smartTable:SmartTable>
    </content>
  </Page>
</mvc:View>
